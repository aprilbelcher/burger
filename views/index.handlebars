<div class="container">
  <div class="logo">
    <img src="/assets/img/burger.png" class="img-responsive" id="burger-img" alt="burger image">
    <h1 id="burger-header">Eat-Da-Burger!</h1>
  </div>

  <div class="row">
    <div class="col-lg-1 create-burger">
      <form class="create-update-form" action="/burgers" method="POST">
        <div class="form-group">
          <p class="text-center"> Enter a burger you want to eat, then click the "Submit" button.</p>
          <label class="control-label" for="focusedInput">Your burger:</label>
          <input class="form-control" id="focusedInput" type="text" placeholder="Enter your burger order..." name="burger_name">
        </div>

        <div class="form-group">
          <button type="submit" class="burger-btn btn btn-warning center-block">Submit</button>
        </div>
      </form>
    </div>
  </div>

  <div class="burger-list row">
    <div class="col-md-6 not-devoured-list">
      {{#each burgers}} {{#unless this.devoured}}
      <div class="row">
        <div class="col-md-8">
          <div class="panel panel-default">
            <div class="panel-body">
              {{this.id}}. {{this.burger_name}}
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <form action="burgers/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit" class="burger-btn btn btn-success">Devour it!</button>
          </form>
        </div>
      </div>
      {{/unless}} {{/each}}
    </div>

    <div class="col-md-4 devoured-list">
      {{#each burgers}} {{#if this.devoured}}
      <div class="panel panel-default">
        <div class="panel-body" id="devoured-text">
          {{this.id}}. {{this.burger_name}}
        </div>
      </div>
      {{/if}} {{/each}}
    </div>
  </div>
</div>
